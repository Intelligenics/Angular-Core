{
    "name": "@intelligenics/modulizer",
    "description": "This package runs npm commands against changed packages found on the branch using intelligenics build",
    "version": "1.0.10",
    "main": "cli.js",
    "bin": {
        "modulize": "./cli.js"
    },
    "license": "MIT", 
    "scripts": {
        "build": "tsc --build",
        "clean": "tsc --build --clean",
        "prepublish-projects": "cd .. && node cli npm run pre-publish",
        "package-projects": "cd .. && node cli generate package",
        "publish": "npm run build && npm publish --access public"
    },
    "keywords": [
        "angular",
        "application framework",
        "typescript"
    ],
    "author": {
        "name": "Intelligenics Ltd."
    },
    "dependencies": {
        "copyfiles": "^2.1.1",
        "cpx": "^1.5.0"
    },
    "devDependencies": {
        "@types/glob": "^7.1.1",
        "@types/node": "^13.1.4",
        "glob": "^7.1.6",
        "typescript": "^3.2.2"
    }
}
